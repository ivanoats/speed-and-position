{
  "name": "speed-and-position",
  "version": "2.0.0",
  "type": "module",
  "description": "A mobile-first web app that shows your speed and position using TypeScript and React",
  "main": "index.ts",
  "scripts": {
    "start": "npm run serve",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "serve": "alive-server --ignore=.git/**/* --port=3000 --https=./node_modules/live-server-https",
    "lint": "eslint index.ts \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint index.ts \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "panda codegen && husky install",
    "panda": "panda"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ivanoats/speed-and-position.git"
  },
  "author": "Ivan Storck",
  "license": "MIT",
  "homepage": "https://howfastwhere.com",
  "devDependencies": {
    "@pandacss/dev": "^1.8.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.21",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/react-leaflet": "^2.8.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "alive-server": "^1.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "live-server-https": "0.0.2",
    "prettier": "^3.8.1",
    "typescript": "^5.5.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@ark-ui/react": "^5.31.0",
    "@park-ui/panda-preset": "^0.43.1",
    "@types/jquery": "^3.5.33",
    "leaflet": "^1.9.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-leaflet": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
